@model IEnumerable<PhotoBooth.Models.PhotoBoothEntity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Фото будки</h2>

<p>
    <a href="@Url.Action("Create")" role="button" class="btn btn-primary btn-sm">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Добавить
    </a>
</p>

<div id="no-more-tables">
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PathToDSLRSettings)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IPadDeviceId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastAvailableDate)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-title="@Html.DisplayNameFor(model => model.Name)">
                        <a href="@Url.Action("Details", new { id = item.Id })" role="button">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>
                    <td data-title="@Html.DisplayNameFor(model => model.PathToDSLRSettings)">
                        @Html.DisplayFor(modelItem => item.PathToDSLRSettings)
                    </td>
                    <td data-title="@Html.DisplayNameFor(model => model.IPadDeviceId)">
                        @Html.DisplayFor(modelItem => item.IPadDeviceId)
                    </td>
                    <td data-title="@Html.DisplayNameFor(model => model.LastAvailableDate)">
                        @Html.DisplayFor(modelItem => item.LastAvailableDate)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" role="button">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" role="button">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>