@{
    ViewBag.Title = "Главная";
}

@section header
{
<!-- Start Header -->
<header id="header">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- Start Logo / Text --> 
                <a class="navbar-brand text-logo" href="@Url.Action("Index", "Home")"><i class="icon-signout"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
                <!-- End Logo / Text -->
            </div>
            <!-- Start Navigation -->
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav menu-right">
                    <li class="active"><a href="#header">Главная</a></li>
                    <li class="dropdown">
                        <a href="#allServices" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Услуги</a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Fotobox","Home")">FOTOBOX</a></li>
                            <li><a href="@Url.Action("Brandbox","Home")">BRANDBOX</a></li>
                            <li><a href="@Url.Action("Instabox","Home")">INSTABOX</a></li>
                            <li><a href="@Url.Action("Socialmatic","Home")">SOCIALMATIC</a></li>
                            <li><a href="@Url.Action("Design","Home")">DESIGN</a></li>
                        </ul>
                    </li>
                    <li><a href="@Url.Action("Index", "Gallery")#photoGallery">Фотогалерея</a></li>
                    <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
                </ul>
            </div>
            <!-- End Navigation  -->
        </div>
    </nav>
</header>
<!-- End Header -->
}

<div id="main-slider" class="carousel slide carousel-fade">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#main-slider" data-slide-to="0" class="active"></li>
        <li data-target="#main-slider" data-slide-to="1"></li>
        <li data-target="#main-slider" data-slide-to="2"></li>
        <li data-target="#main-slider" data-slide-to="3"></li>
        <li data-target="#main-slider" data-slide-to="4"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <!-- Start Slide 1  -->
        <div class="item cover slide1 active">
            <div class="carousel-caption">
            </div>
        </div>
        <!-- End Slide 1  -->
        <!-- Start Slide 2  -->
        <div class="item cover slide2">
            <div class="carousel-caption">
                <!-- <h2>Caption 2</h2>  -->
            </div>
        </div>
        <!-- End Slide 2  -->
        <!-- Start Slide 3 -->
        <div class="item cover slide3">
            <div class="carousel-caption">
                <!-- <h2>Caption 3</h2>  -->
            </div>
        </div>
        <!-- End Slide 3  -->
        <!-- Start Slide 4 -->
        <div class="item cover slide4">
            <div class="carousel-caption">
            </div>
        </div>
        <!-- End Slide 4  -->
        <!-- Start Slide 5 -->
        <div class="item cover slide5">
            <div class="carousel-caption">
            </div>
        </div>
        <!-- End Slide 5  -->
    </div>

    <!-- Start Black Background Overlay  -->
    <div class="overlay-bg"></div>
    <!-- End Background Overlay  -->
    <!-- Start Navigations  -->
    <a class="left carousel-control" href="#main-slider" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
    <a class="right carousel-control" href="#main-slider" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
    <!-- End Navigations  -->
</div>

<section id="allServices" class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4 members-holder">
                <!-- Start Member Details  -->
                <div class="members-detail" onclick="location.href = '@Url.Action("Fotobox","Home")'">
                    <img src="~/App/img/img-001.png" alt="" class="img-responsive" style="display: inline-block" title="" /><!-- Member Image  -->
                    <h3>FOTOBOX</h3><!-- Member Name  -->
                    <p>
                        профессиональное фотооборудование в стильном дизайне, которое
                        подойдет для любого формата мероприятий от свадеб и торжеств до корпоративных
                        встреч и презентаций.
                        <br /> <a href="#">Далее...</a>
                    </p><!-- Member Title  -->
                </div>
                <!-- End Member Details  -->
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 members-holder">
                <div class="members-detail" onclick="location.href = '@Url.Action("Brandbox","Home")'">
                    <img src="~/App/img/img-002.png" alt="" class="img-responsive" style="display: inline-block" title="" />
                    <h3>BRANDBOX</h3>
                    <p>
                        современное решение для продвижения товаров и услуг.
                        Брендбокс является аналогом Фотобокса, однако, имеет ряд существенных отличий, позволяющих
                        использовать его для рекламных и демонстрационных целей.
                        <br /> <a href="#">Далее...</a>
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 members-holder">
                <div class="members-detail" onclick="location.href = '@Url.Action("Instabox","Home")'">
                    <img src="~/App/img/img-003.png" alt="" class="img-responsive" style="display: inline-block" title="" />
                    <h3>INSTABOX</h3>
                    <p>
                        моментальная печать фотографий прямо с мобильного телефона.
                        <br /> <a href="#">Далее...</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4 members-holder" onclick="location.href = '@Url.Action("Socialmatic","Home")'">
                <div class="members-detail">
                    <img src="~/App/img/img-004.png" alt="" class="img-responsive" style="display: inline-block" title="" />
                    <h3>SOCIALMATIC</h3>
                    <p>
                        мгновенная камера обладающая поистине ярким дизайном и способная моментально распечатывать сделанные фотоснимки.
                        <br /> <a href="@Url.Action("Socialmatic","Home")">Далее...</a>
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 members-holder" onclick="location.href = '@Url.Action("Design","Home")'">
                <div class="members-detail">
                    <img src="~/App/img/img-005.jpg" alt="" class="img-responsive" style="display: inline-block" title="" />
                    <h3>DESIGN</h3>
                    <p>
                        оригинальный дизайн и уникальное оформление фотозоны с использованием модных аксессуаров.
                        <br /> <a href="@Url.Action("Design", "Home")">Далее...</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>